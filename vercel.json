{
    "version": 2,
    "buildCommand": "pnpm build",
    "outputDirectory": "dist/public",
    "rewrites": [
        {
            "source": "/api/trpc/:path*",
            "destination": "/api/trpc"
        },
        {
            "source": "/uploads/:path*",
            "destination": "/api/index"
        },
        {
            "source": "/:path*",
            "destination": "/index.html"
        }
    ]
}