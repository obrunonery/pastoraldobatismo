{
    "version": 2,
    "buildCommand": "pnpm build",
    "outputDirectory": "dist/public",
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/index.ts"
        },
        {
            "source": "/uploads/:path*",
            "destination": "/api/index.ts"
        },
        {
            "source": "/:path*",
            "destination": "/index.html"
        }
    ]
}